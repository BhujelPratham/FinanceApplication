<?xml version="1.0" encoding="UTF-8"?>

<GridPane fx:id="grid" alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml"
          fx:controller="FinanceApplication.MainController">
    <Label text="Expense Category:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="expenseAmountField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button text="Add Expense" onAction="#handleAddExpense" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ListView fx:id="expenseList" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
</GridPane>
