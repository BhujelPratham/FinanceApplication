<?xml version="1.0" encoding="UTF-8"?>

<GridPane fx:id="grid" alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml"
          fx:controller="FinanceApplication.MainController">
    <Label text="Income Source:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="sourceField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button text="Add Income" onAction="#handleAddIncome" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ListView fx:id="incomeList" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
</GridPane>
